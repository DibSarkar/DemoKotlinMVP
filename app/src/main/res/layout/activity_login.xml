<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
   android:background="@drawable/loginbg"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"


        android:gravity="center"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:text="Welcome Back"
                android:layout_marginTop="@dimen/welcome_back_top_margin"
                android:gravity="center"

                android:textSize="@dimen/welcome_text"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Sign in to continue"
                android:layout_gravity="center"


                android:textColor="@color/colorsign"

                android:layout_height="wrap_content" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/box_size"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="25dp"

    android:background="@drawable/rounded_bg"
    android:layout_gravity="center"
    >


          <EditText
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:hint="MOBILE NUMBER"
            android:textStyle="bold"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:inputType="phone"

            android:singleLine="true"



            android:textSize="13dp"
            android:textColor="@color/colorEmailText"
            android:textColorHint="@color/colorEmailHint" />




</LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/white_rounded_bg"
                android:layout_gravity="center"
                >

                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="PASSWORD"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:inputType="textPassword"

                    android:singleLine="true"



                    android:textSize="13dp"
                    android:textColor="@color/colorEmailText"
                    android:textColorHint="#9b9b9b" />

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_top_signup_fields"
                android:text="Proceed"
                android:gravity="left|center"
                android:paddingRight="@dimen/padding"
                android:textColor="#fff"
                android:textSize="13dp"
                android:id="@+id/btn_submit"
                android:drawableRight="@drawable/arrow_white"
                android:paddingLeft="@dimen/padding"
                android:background="@drawable/button_bg"
                android:layout_marginRight="20dp"
                android:layout_height="@dimen/box_size"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:id="@+id/tv_forgot"
                android:text="Forgot Password ?"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
              android:text="Don't have an account?"
                android:textSize="15dp"
                android:id="@+id/tv_signup"
                android:textColor="#142f5c"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:text="Sign Up"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:id="@+id/tv_signup1"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                />


        </LinearLayout>


    </LinearLayout>




</RelativeLayout>