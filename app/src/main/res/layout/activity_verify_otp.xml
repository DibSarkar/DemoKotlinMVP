<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@drawable/otp_bg">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="20dp"
            android:id="@+id/iv_back"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:src="@drawable/arrow_back"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFY OTP"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
      android:layout_marginTop="@dimen/margin_top_otp_fields"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/box_size"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="@dimen/margin_top_signup_fields"

        android:background="@drawable/border_bg"
        android:layout_gravity="center"
        >


        <EditText
            android:id="@+id/et_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:hint="TYPE OTP"
            android:textStyle="bold"
            android:paddingLeft="@dimen/padding"
            android:paddingRight="@dimen/padding"
            android:inputType="number"

            android:singleLine="true"



            android:textSize="13dp"
            android:textColor="@color/colorEmailText"
            android:textColorHint="@color/colorEmailHint" />




    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/margin_top_signup_fields"
        android:text="VERIFY OTP"
        android:gravity="left|center"
        android:id="@+id/btn_verify"
        android:paddingRight="@dimen/padding"
        android:textColor="#fff"
        android:textSize="13dp"
        android:drawableRight="@drawable/arrow_white"
        android:paddingLeft="@dimen/padding"
        android:background="@drawable/button_bg"
        android:layout_marginRight="20dp"
        android:layout_height="@dimen/box_size"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend OTP"
        android:id="@+id/tv_resend_otp"
        android:layout_marginTop="20dp"
        android:textColor="#a4a4a4"
        android:layout_marginRight="25dp"
        android:layout_gravity="right"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </LinearLayout>



</LinearLayout>




</RelativeLayout>
