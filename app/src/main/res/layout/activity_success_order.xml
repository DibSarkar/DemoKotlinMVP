    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="180dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/rl_details"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <com.app.dirt2clean.features.order_success.CheckView
                android:id="@+id/check"
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:checkView_strokeColor="@color/colorPrimary"
                app:checkView_strokeWidth="@dimen/check_stroke_width"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Successfull"
            android:layout_marginTop="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/cart_btn_size"
        android:text="GO TO HOME"
        android:gravity="left|center"
        android:paddingLeft="@dimen/padding_add_cart"
        android:id="@+id/btn_home"

        android:paddingRight="@dimen/padding_add_cart"
        android:textSize="@dimen/text_add_cart"
        android:textColor="#fff"
        android:drawableRight="@drawable/arrow_white"
        android:background="@color/blueColor"
        android:layout_alignParentBottom="true"/>


