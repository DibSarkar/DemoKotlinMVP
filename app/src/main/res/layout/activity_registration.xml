<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"

    android:gravity="center"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/signup_bg"
        >
        <RelativeLayout

            android:layout_width="match_parent"
      android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"

            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:id="@+id/iv_back"
                android:src="@drawable/arrow_back"
                android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#fff"
            android:layout_centerInParent="true"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/profile_image_margins"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:scaleType="centerCrop"
                android:id="@+id/civ_profile"

                android:layout_height="100dp"
                android:src="@drawable/default_prof"/>
                <ImageView
                    android:id="@+id/iv_cam"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/camera"



                    android:layout_alignBottom="@id/civ_profile"
                    android:layout_alignParentRight="@id/civ_profile"        android:layout_alignRight="@id/civ_profile"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:layout_marginTop="35dp"

                android:background="@drawable/border_bg"

                >


                <EditText
                    android:id="@+id/et_fname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="FIRST NAME"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:inputType="text"

                    android:singleLine="true"



                    android:textSize="13dp"
                    android:textColor="@color/colorEmailText"
                    android:textColorHint="@color/colorEmailHint" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top_signup_fields"

                android:background="@drawable/border_bg"
                android:layout_gravity="center"
                >


                <EditText
                    android:id="@+id/et_lname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="LAST NAME"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:inputType="text"

                    android:singleLine="true"



                    android:textSize="13dp"
                    android:textColor="@color/colorEmailText"
                    android:textColorHint="@color/colorEmailHint" />




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top_signup_fields"


                android:background="@drawable/border_bg"
                android:layout_gravity="center"
                >


                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="EMAIL ADDRESS"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:inputType="text"

                    android:singleLine="true"



                    android:textSize="13dp"
                    android:textColor="@color/colorEmailText"
                    android:textColorHint="@color/colorEmailHint" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top_signup_fields"

                android:background="@drawable/border_bg"
                android:layout_gravity="center"
                >


                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="MOBILE NUMBER"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:inputType="phone"

                    android:singleLine="true"



                    android:textSize="15dp"
                    android:textColor="@color/colorEmailText"
                    android:textColorHint="@color/colorEmailHint" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/box_size"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/margin_top_signup_fields"


                android:background="@drawable/border_bg"
                android:layout_gravity="center"
                >


                <EditText
                    android:id="@+id/et_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:hint="PASSWORD"
                    android:textStyle="bold"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:inputType="textPassword"

                    android:singleLine="true"



                    android:textSize="13dp"
                    android:textColor="@color/colorEmailText"
                    android:textColorHint="@color/colorEmailHint" />




            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/margin_top_signup_btn"
                android:text="Proceed"
                android:id="@+id/btn_register"
                android:gravity="left|center"
                android:paddingRight="@dimen/padding"
                android:textColor="#fff"
                android:textSize="13dp"
                android:layout_marginBottom="30dp"
                android:drawableRight="@drawable/arrow_blue"
                android:paddingLeft="@dimen/padding"
                android:background="@drawable/signup_button"
                android:layout_marginRight="20dp"
                android:layout_height="@dimen/box_size"
                />

        </LinearLayout>






    </LinearLayout>
    </ScrollView>
</RelativeLayout>
